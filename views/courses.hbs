<h1>Список курсов</h1>

{{#if courses.length}}

<div class="row">
    {{#each courses}}
    <div class="col s4 ">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}">
          
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
          <p class="price">Price: {{price}}</p>
        </div>
        <div class="card-action">
          <a href="#{{id}}">Go to the course</a>
        </div>
      </div>
    </div>
     {{/each}}
  </div>
 
{{else}}
<p>Курсов нет</p>
{{/if}}